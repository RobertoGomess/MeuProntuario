<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBranco"
    tools:context="br.com.meuprontuario.meuprontuario.PerfilActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_menu_perfil"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        app:title="Perfil"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/view2"
        app:cardCornerRadius="40dp"
        android:shape="ring"
        android:layout_marginStart="13dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/toolbar_menu_perfil"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageViewPerfilLoad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/view2"
            android:layout_below="@+id/view2">

        </ImageView>
    </android.support.v7.widget.CardView>


</RelativeLayout>
